{
  "name": "@integral/contracts",
  "description": "Integral smart contracts.",
  "license": "GPL-3.0-or-later",
  "version": "0.1.0",
  "engines": {
    "node": ">=10",
    "yarn": "^1.17.3"
  },
  "scripts": {
    "lint": "yarn lint:prettier --check && yarn lint:eslint",
    "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix",
    "lint:eslint": "eslint './{test}/**/*.ts'",
    "lint:prettier": "yarn prettier './{test,contract}/**/*.{ts,sol}'",
    "clean": "rimraf ./build/",
    "prebuild": "yarn clean",
    "build": "waffle .waffle.json && typechain --target ethers-v5 --outDir build/types 'build/*.json'",
    "test": "mocha",
    "prepublishOnly": "yarn build && yarn test"
  },
  "devDependencies": {
    "@resolver-engine/imports-fs": "^0.3.3",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/argparse": "^2.0.2",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "argparse": "^2.0.1",
    "axios": "^0.21.1",
    "chai": "^4.2.0",
    "chalk": "^4.1.0",
    "eslint": "^7.15.0",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-util": "^7.0.7",
    "ethers": "^5.0.19",
    "ganache-cli": "^6.12.1",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "querystring": "^0.2.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "solc": "^0.7.4",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
